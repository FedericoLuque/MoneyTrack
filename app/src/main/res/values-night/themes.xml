<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MoneyTrack" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="CashFlowChartStyle">
        <item name="layers">column</item>
        <item name="showBottomAxis">true</item>
        <item name="showStartAxis">true</item>
    </style>

    <style name="PatrimonyChartStyle">
        <item name="layers">column</item>
        <item name="showBottomAxis">true</item>
        <item name="showStartAxis">true</item>
    </style>
</resources>
