<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_charts"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginBottom="16dp" />

        <!-- Flujo de Caja Mensual -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chart_weekly_cash_flow"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="8dp" />

                <!-- Leyenda -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="#4CAF50"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/legend_income"
                        android:textSize="12sp"
                        android:layout_marginEnd="16dp" />

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="#F44336"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/legend_expense"
                        android:textSize="12sp"
                        android:layout_marginEnd="16dp" />

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="#EF6C00"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/legend_bitcoin"
                        android:textSize="12sp" />
                </LinearLayout>

                <com.patrykandpatrick.vico.views.cartesian.CartesianChartView
                    android:id="@+id/chartCashFlow"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    app:chartStyle="@style/CashFlowChartStyle" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ComposiciÃ³n de Patrimonio -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chart_patrimony_composition"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="8dp" />

                <!-- Leyenda -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="#2196F3"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/legend_fiat"
                        android:textSize="12sp"
                        android:layout_marginEnd="16dp" />

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="#EF6C00"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/legend_bitcoin"
                        android:textSize="12sp" />
                </LinearLayout>

                <com.patrykandpatrick.vico.views.cartesian.CartesianChartView
                    android:id="@+id/chartPatrimony"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    app:chartStyle="@style/PatrimonyChartStyle" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
