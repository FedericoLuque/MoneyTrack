<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/money_graph"
    app:startDestination="@id/dashboardFragment">

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.federico.moneytrack.ui.dashboard.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_dashboardFragment_to_addTransactionFragment"
            app:destination="@id/addTransactionFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_accountsFragment"
            app:destination="@id/accountsFragment" />
    </fragment>

    <fragment
        android:id="@+id/addTransactionFragment"
        android:name="com.federico.moneytrack.ui.transaction.AddTransactionFragment"
        android:label="Nueva Transacción"
        tools:layout="@layout/fragment_add_transaction" />

    <fragment
        android:id="@+id/accountsFragment"
        android:name="com.federico.moneytrack.ui.account.AccountsFragment"
        android:label="Mis Cuentas"
        tools:layout="@layout/fragment_accounts">
        <action
            android:id="@+id/action_accountsFragment_to_addAccountFragment"
            app:destination="@id/addAccountFragment" />
    </fragment>

    <fragment
        android:id="@+id/addAccountFragment"
        android:name="com.federico.moneytrack.ui.account.AddAccountFragment"
        android:label="Añadir Cuenta"
        tools:layout="@layout/fragment_add_account" />
</navigation>