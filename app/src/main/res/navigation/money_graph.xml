<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/money_graph"
    app:startDestination="@id/dashboardFragment">

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.federico.moneytrack.ui.dashboard.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_dashboardFragment_to_addTransactionFragment"
            app:destination="@id/addTransactionFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_accountsFragment"
            app:destination="@id/accountsFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_categoriesFragment"
            app:destination="@id/categoriesFragment" />
    </fragment>

    <fragment
        android:id="@+id/addTransactionFragment"
        android:name="com.federico.moneytrack.ui.transaction.AddTransactionFragment"
        android:label="Nueva Transacción"
        tools:layout="@layout/fragment_add_transaction" />

    <fragment
        android:id="@+id/accountsFragment"
        android:name="com.federico.moneytrack.ui.account.AccountsFragment"
        android:label="Mis Cuentas"
        tools:layout="@layout/fragment_accounts">
        <action
            android:id="@+id/action_accountsFragment_to_addAccountFragment"
            app:destination="@id/addAccountFragment" />
    </fragment>

    <fragment
        android:id="@+id/addAccountFragment"
        android:name="com.federico.moneytrack.ui.account.AddAccountFragment"
        android:label="Añadir Cuenta"
        tools:layout="@layout/fragment_add_account" />

    <fragment
        android:id="@+id/bitcoinFragment"
        android:name="com.federico.moneytrack.ui.bitcoin.BitcoinFragment"
        android:label="@string/title_bitcoin"
        tools:layout="@layout/fragment_bitcoin">
        <action
            android:id="@+id/action_bitcoinFragment_to_addBitcoinTransactionFragment"
            app:destination="@id/addBitcoinTransactionFragment" />
    </fragment>

    <fragment
        android:id="@+id/addBitcoinTransactionFragment"
        android:name="com.federico.moneytrack.ui.bitcoin.AddBitcoinTransactionFragment"
        android:label="Operación Bitcoin"
        tools:layout="@layout/fragment_add_bitcoin_transaction">
        <argument
            android:name="isBuy"
            app:argType="boolean"
            android:defaultValue="true" />
    </fragment>

    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.federico.moneytrack.ui.category.CategoriesFragment"
        android:label="@string/title_categories"
        tools:layout="@layout/fragment_categories">
        <action
            android:id="@+id/action_categoriesFragment_to_addCategoryFragment"
            app:destination="@id/addCategoryFragment" />
    </fragment>

    <fragment
        android:id="@+id/addCategoryFragment"
        android:name="com.federico.moneytrack.ui.category.AddCategoryFragment"
        android:label="Nueva Categoría"
        tools:layout="@layout/fragment_add_category" />
</navigation>